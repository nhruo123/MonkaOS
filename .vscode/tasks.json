{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build iso",
      "command": "${workspaceFolder}/docker/build.bat",
      "type": "shell",
      "args": ["iso"],
      "presentation": {
        "reveal": "always"
      },
      "group": "build"
    },
    {
      "label": "Run QEMU",
      "type": "shell",
      "isBackground": true,
      // "dependsOn": ["Build iso"],
      "command": [
        "echo Starting QEMU; qemu-system-i386.exe ${workspaceFolder}/build/os-i386.iso -s -S"
      ],
      "problemMatcher": {
        "pattern": {
          "regexp": "^(Starting QEMU)",
          "line": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^(Starting QEMU)",
          "endsPattern": "^(Starting QEMU)"
        }
      }
    }
  ]
}
